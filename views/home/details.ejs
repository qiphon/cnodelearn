</div>

<script>
	$('.glyphicon-thumbs-up').click(function(){
		// alert(111)
		// 获取当前点赞按钮对应的回复的_id的值
		// alert($(this).attr('id'));
		var id = $(this).attr('id');

		// 获取要输入点赞数量的up-count
		// console.log($(this).next());
		var count = $(this).next();
		var newNum = count.html();
		// console.log(newNum);

		// 发送ajax
		$.get('/topic/reply/like/'+id,function(msg){
			// alert(msg);
			// console.log(msg);
			if(msg=='nologin'){
				// 弹框提示
				alert('呵呵，你还没有登录呢...');

				// 跳转
				window.location.href = "/users/login";
			}else{
				// 判断返回的是什么
				if(newNum==''){
					newNum = 0;
				}

				// + 在现有的数量上+1
				if(msg=='+'){
					newNum++;
				}else if(msg=='-'){
					// - 在现有的数量上-1
					newNum--;
				}

				// 如果newNum<=0，将newNum重置为空
				if(newNum<=0){
					newNum='';
				}

				// console.log(newNum);

				// 赋值
				count.html(newNum);

			}
		})
	})

</script>