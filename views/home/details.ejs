				  " id="reply1" reply_id="585dfcda51aa32885d4f0fee" reply_to_id="">
						<div class="author_content">
					    	<a href="/user/solarhell" class="user_avatar">
					    	<% if(reply.user.uportrait){ %>
					      		<img src="/uportrait/<%= reply.user.uportrait %>">
					      	<% }else{ %>
