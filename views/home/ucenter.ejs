<!-- 加载头部 -->

<% 
    include header

 %>
    <title>个人中心</title>

<div id="main">
    <!-- 加载右侧的slidebar -->
    <% include slidebar %>
    
    <div id="content">
        <div class="panel">
            <div class="header">
                <ul class="breadcrumb">
                    <li><a href="/">主页</a><span class="divider">/</span></li>
                    <li class="active">设置</li>
                </ul>
            </div>
            <div class="inner">
                <form id="setting_form" class="form-horizontal" action="/users/change_des" method="post" enctype="multipart/form-data">
                    <div class="control-group">
                        <label class="control-label" for="name">用户名</label>
                        <div class="controls">
                            <input class="input-xlarge readonly" id="name" name="uname" size="30" disabled value="<%= user.uname  %>" type="text">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="">修改头像</label>
                        <div class="controls">
                            <input class="input-xlarge readonly" name="uportrait" size="30" type="file">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="email">电子邮件</label>
                        <div class="controls">
                            <input class="input-xlarge" readonly id="email" name="email" size="30" value="<%= user.email %>" type="text">
                            <a href="/users/changeEmail">更改</a>
                        </div>
                    </div>
                   
                    <div class="control-group">
                        <label class="control-label" for="weibo">金币</label>
                        <div class="controls">
                            <input class="input-xlarge" disabled id="weibo" name="gold" size="30" value="<%= user.gold %>" type="text">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="signature">个性签名</label>
                        <div class="controls">
                            <textarea class="input-xlarge" id="signature" name="des" size="30"><%= user.des %></textarea>
                        </div>
                    </div>

                    <div class="form-actions">
                        <input class="span-primary submit_btn" data-loading-text="保存中.." value="保存设置" type="submit">
                    </div>
                </form>
            </div>
        </div>
        <div class="panel">
            <div class="header">
              <span class="col_fade" id="change_pwd">更改密码</span>
            </div>
            <div class="inner">
           <% if(errPwd.length){ %>
                <p class="alert alert-danger"><%= errPwd %></p>
         <%   }  %>
          
              <form id="change_pass_form" class="form-horizontal" action="/users/change_pwd" method="post">
                <div class="control-group">
                  <label class="control-label" for="old_pass">当前密码</label>

                  <div class="controls">
                    <input class="input-xlarge" required id="old_pass" name="old_pass" size="30" type="password">
                  </div>
                </div>
                <div class="control-group">
                  <label class="control-label" for="new_pass">新密码</label>

                  <div class="controls">
                    <input class="input-xlarge" id="new_pass" name="new_pass" size="30" type="password">
                  </div>
                </div>
                <div class="control-group">
                  <label class="control-label" for="new_pass">新密码</label>

                  <div class="controls">
                    <input class="input-xlarge" required id="new_pass" name="new_pass2" size="30" type="password">
                  </div>
                </div>
                <input id="action" name="action" value="change_password" type="hidden">
                <input name="_csrf" value="7zRmRFar-Oj4cVPDmqBCxCgIEp0hL4o2L5eU" type="hidden">

                <div class="form-actions">
                  <input class="span-primary submit_btn" data-loading-text="更改中.." value="更改密码" type="submit">
                </div>
              </form>
            </div>
          </div>

    </div>
</div>
    
    


<!-- 公共底部部分 -->
<% include footer %>