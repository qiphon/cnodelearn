<!-- 引入头部 -->
<% include ../header %>
    
<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="#">首页</a>
            </li>

            <li>
                <a class="active" href="#">话题模块</a>
            </li>
            
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
                <span class="input-icon">
                    <input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
                    <i class="icon-search nav-search-icon"></i>
                </span>
            </form>
        </div><!-- #nav-search -->
    </div>

    <div class="page-content">
        <div class="page-header">
            <h1>
                
                <small>
                    <i class="icon-double-angle-right"></i>
                   话题修改
                </small>
            </h1>
        </div><!-- /.page-header -->

        <div class="row">
            <div class="col-xs-12">
                 <!-- 输出错误信息 -->
                <% if(errMsg.length){ %> 
                    <p class="alert alert-danger"><%= errMsg %></p>
                <% } %>
                <!-- 右侧的侧边栏 -->
<div id="main">

<!-- 发表页面 -->
    <div id="content">
        <div class="panel">
            <div class="inner post">
                <form id="create_topic_form" class="form-horizontal"  action="/admin/topicsUpdate" method="post">
              
                    <fieldset>
                        <span class="tab-selector">选择版块：</span>
                        <select name="cid" id="tab-value" >
                            <option value="">请选择</option>

                            <% cateData.forEach(function(cate){ %>
                                <!-- 选择的是哪一个模块 -->
                                <option value="<%= cate._id %>"><%= cate.cateName %></option>
                            <% }) %>
                        </select>
                        <div class="space-6"></div>
                        <span id="topic_create_warn ">话题标题：</span>
                        <textarea autofocus="" class="span6" id="title" name="tName" rows="1" placeholder="标题字数 10 字以上"><%= topicsData.tName %></textarea>
                        <div class="space-6"></div>
                        <div class="markdown_editor in_editor">
                            <textarea class="span10" rows="20" cols="100" name="tContent" placeholder="请输入内容"><%= topicsData.tContent %></textarea>

                        <div class="space-6"></div>
                            <div class="editor_buttons">
                                <input class="span-primary submit_btn" data-loading-text="提交中" value="提交" type="submit">
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        
        </div>
    </div>
</div>
                
            </div>
        </div>
    </div><!-- /.page-content -->
</div><!-- /.main-content -->

<!-- 引入底部 -->
<% include ../footer %>